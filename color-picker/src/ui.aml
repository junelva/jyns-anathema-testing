zstack
    text "h/j/k/l: navigate; ctrl: precise edit"
    align [alignment: "centre"]
        vstack
            for i in [0, 1, 2, 3]
                if i == 0
                    border [border_style: "╔─╗│╝─╚│", foreground: "white"]
                        @pick_rgb
                else
                    border [border_style: "┌┈┐┊┘┈└┊"]
                        @pick_rgb
